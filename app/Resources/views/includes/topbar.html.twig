                    </li>
                    <li class="hidden-xs">
                        <a href="#" id="btn-fullscreen" class="waves-effect waves-light"><i class="md md-crop-free"></i></a>
                    </li>
                    <li class="hidden-xs">
                        <a href="#" class="right-bar-toggle waves-effect waves-light"><i class="md md-chat"></i></a>
                    </li>


                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% for role in app.user.roles %}
                        {% if(role == 'ROLE_ADMIN') %}
                            <li class="hidden-xs">
                                <a href="{{ path('admin_advert_index') }}" class="btn btn-toolbar">Admin</a>
                            </li>
                        {% endif %}
                        {% endfor %}

                    <li class="dropdown">
                        {% if app.user.image is not null %}
                            <a href="" class="dropdown-toggle profile" data-toggle="dropdown" aria-expanded="true">
                                <img
                                        src="{{ asset(app.user.image.AssetPath) }}"
                                        alt="{{ app.user.username }}"
                                        class="img-circle"
                                />
                            </a>
                        {% else %}
                            <a href="" class="dropdown-toggle profile" data-toggle="dropdown" aria-expanded="true">
                                <img src="{{ asset('Resources/public/images/users/avatar-1.jpg') }}" alt="user-img" class="thumb-md img-circle" >
                            </a>
                        {% endif %}
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_profile_show') }}"><i class="md md-face-unlock"></i> Profile</a></li>
                            <li><a href="{{ path('fos_user_profile_show') }}"><i class="md md-settings"></i> Mes informations</a></li>
                            <li><a href="{{ path('fos_user_profile_edit') }}"><i class="md md-edit"></i> Editer mes informations</a></li>
                            <li><a href="{{ path('fos_user_profile_edit') }}"><i class="md md-track-changes"></i> Changer mot passe</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}"><i class="md md-settings-power"></i> DÃ©connexion</a></li>

